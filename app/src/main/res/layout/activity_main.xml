<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adao1.project2.MainActivity">

    <Spinner
        android:id="@+id/spinnerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="15dp"></Spinner>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
           android:id="@+id/listViewID"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="invisible"></ListView>
        <ScrollView
            android:id="@+id/scrollViewID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/homeLayoutID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/greatMallImageID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:background="@drawable/greatmall"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/favoriteHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clothing"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    />
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/clothingHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"
                    android:paddingTop="5dp"
                    android:divider="#FFCC00"
                    hlv_dividerWidth = "4dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shoe"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/shoesHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electronics"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/electronicsHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/entertainmentHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/foodHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Jewelry"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/jewelryHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#008080" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Specialty"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>
                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/specialtyHorizontalListViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="150dip"/>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
